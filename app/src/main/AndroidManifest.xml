<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fityan.tugaskita"
    >

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_lister"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_lister_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TugasKita"
        >
        <activity
            android:name=".activities.ManageSharedTaskActivity"
            android:exported="false"
            android:label="Manage Access"
            android:parentActivityName=".activities.SharedTaskListActivity"
            />
        <activity
            android:name=".activities.SharedTaskListActivity"
            android:exported="false"
            android:label="Shared List"
            android:parentActivityName=".activities.DetailTaskActivity"
            />
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="false"
            android:label="Forgot Password"
            android:parentActivityName=".activities.LoginActivity"
            />
        <activity
            android:name=".activities.DetailTaskActivity"
            android:exported="false"
            android:label="Detail Task"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.EditTaskActivity"
            android:exported="false"
            android:label="Edit Task"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.AddTaskActivity"
            android:exported="false"
            android:label="Add Task"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.UpdateProfileActivity"
            android:exported="false"
            />
        <activity
            android:name=".activities.VerifyEmailActivity"
            android:exported="false"
            />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            />
    </application>

</manifest>
